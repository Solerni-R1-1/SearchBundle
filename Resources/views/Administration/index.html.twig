{% extends "ClarolineCoreBundle:Administration:layout.html.twig" %}

{% block section_content %}

<div class="panel-heading">
    <h3 class="panel-title">{{ 'indexer_admin'|trans({}, 'platform') }}</h3>
</div>

<div class="alert alert-success" role="alert">
    <ul>
    {% for flashMessage in app.session.flashbag.get('notice') %}
        <li>{{ flashMessage }}</li>
    {% endfor %}
    </ul>
</div>

<div class="panel-body"> 
    <div class="well">
        {{ 'select_indexable_entities'|trans({}, 'platform') }}
        <form method="post" {{ form_enctype(form) }}>
            {{ form_widget(form.indexableEntityChoices) }}
            <div class="slrn-admin-reindexall">
                <label class="checkbox">
                {{ 'form_requeue_all' | trans({}, 'platform') }}
                    
                {{ form_widget(form.reindexAll) }}
                </label>
            </div>
            
            <input type="submit" class="btn btn-primary" />
        </form>
    </div>
</div>

{% endblock %}
